<!DOCTYPE html>
<html lang="en">
  <%- include('../include/head.ejs') %>

  <body>
    <%- include('../include/nav.ejs') %>

    <div class="container pt-5 mt-5">
      <div class="row">
        <div class="card p-0">
          <div class="card-header">
            <h3 class="card-title text-center">
              <%= product.name.toUpperCase() %>
            </h3>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-4">
                <img
                  src="/static/img/<%= product.image %>"
                  alt="<%= product.name %>"
                  class="img-fluid rounded-5 scale-min" />
              </div>
              <div class="col-md-8 mt-4">
                <p>
                  <strong>Price:</strong> <%= product.price %>
                  <i class="fa fa-try"></i>
                </p>
                <p><strong>Description:</strong> <%= product.description %></p>
                <button class="btn btn-outline-primary shadow scale-max">
                  <i class="fa fa-shopping-cart"></i>
                  Add to Cart
                </button>
                <br />
                <a
                  href="/user"
                  class="btn btn-outline-primary shadow mt-3 scale-max">
                  <i class="fa fa-arrow-left"></i>
                  Back to Products
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
