<!DOCTYPE html>
<html lang="en">
  <%- include('../include/head.ejs') %>

  <body>
    <%- include('../include/nav.ejs') %>

    <div class="container pt-5 mt-5">
      <div class="row mt-5">
        <div class="col-lg-3 mt-2">
          <h1 class="h2 font-monospace">Kategoriler</h1>

          <% categories.forEach(category => { %> <%-
          include('../include/category.ejs', {category: category}) %> <%}) %>
        </div>
        <div class="col-lg-9 mt-2">
          <%- include('../include/carousel.ejs') %>

          <div class="row mt-3 g-4">
            <% products.forEach(product => {%>
            <div class="col-md-4 scale-max">
              <%- include('../include/card.ejs', product) %>
            </div>
            <%})%>
          </div>
        </div>

        <% if (products.length>=3) {%> <%-include('../include/pagination.ejs')%>
        <% } %>
      </div>
    </div>

    <script src="/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
