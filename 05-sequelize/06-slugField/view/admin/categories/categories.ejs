<!DOCTYPE html>
<html lang="en">
  <%- include('../../include/head.ejs') %>

  <body>
    <%- include('../../include/nav.ejs') %>

    <div class="container pt-5 mt-4">
      <div class="row">
        <h1 class="py-4 text-center">Category List</h1>
        <% if (action != undefined && action == "create") { %>
        <div
          class="alert alert-success alert-dismissible fade show"
          role="alert">
          <h4 class="alert-heading"><%= categoryName %> Created!</h4>
          <hr />
          <p class="mb-0">Category has been created successfully.</p>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"></button>
        </div>
        <% } %> <% if (action != undefined && action == "edit") { %>
        <div
          class="alert alert-warning alert-dismissible fade show"
          role="alert">
          <h4 class="alert-heading"><%= categoryName %> Updated!</h4>
          <hr />
          <p class="mb-0">Category has been updated successfully.</p>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"></button>
        </div>
        <% } %> <% if (action != undefined && action == "delete") { %>
        <div
          class="alert alert-danger alert-dismissible fade show"
          role="alert">
          <h4 class="alert-heading"><%= categoryName %> Deleted!</h4>
          <hr />
          <p class="mb-0">Category has been deleted successfully.</p>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <table class="table table-bordered table-dark">
          <thead class="thead-dark">
            <tr class="text-center">
              <th>#</th>
              <th>Name</th>
              <th>Description</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach((category, index) => { %>
            <tr class="text-center">
              <td><%= index + 1 %></td>
              <td><%= category.name %></td>
              <td><%= category.description %></td>
              <td>
                <a
                  href="/admin/category/edit/<%= category.url %>"
                  class="btn btn-sm btn-warning w-75 mb-4 shadow scale-min">
                  Edit
                </a>
                <a
                  href="/admin/category/delete/<%= category.id %>"
                  class="btn btn-sm btn-danger w-75 shadow scale-min">
                  Delete
                </a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <script src="/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/js/alert.js"></script>
  </body>
</html>
