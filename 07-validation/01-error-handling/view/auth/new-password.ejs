<!DOCTYPE html>
<html lang="en">
  <%- include('../include/head.ejs') %>

  <body>
    <%- include('../include/nav.ejs') %>

    <div
      class="container d-flex justify-content-center align-items-center vh-100">
      <div class="">
        <% if (typeof message != "undefined") { %>
        <div
          class="alert alert-<%= message.class %> alert-dismissible fade show mb-3"
          role="alert">
          <p class="mb-0"><%= message.text %></p>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"></button>
        </div>
        <% } %>
        <div class="card text-center shadow" style="width: 350px">
          <div class="card-header h5 text-white bg-primary">New Password</div>
          <div class="card-body px-5">
            <p class="card-text py-2">
              Enter your new password and confirm it.
            </p>
            <form action="/account/new-password" method="post">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <input type="hidden" name="userId" value="<%= userId %>" />
              <input type="hidden" name="token" value="<%= token %>" />
              <div class="form-floating mb-3">
                <input
                  type="password"
                  class="form-control shadow"
                  id="password"
                  placeholder=""
                  name="password" />
                <label for="password">Password</label>
              </div>
              <button
                type="submit"
                class="btn btn-outline-primary w-100 shadow scale-min fs-5">
                <i class="fa fa-pencil me-2"></i>
                Update Password
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script src="/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/js/alert.js"></script>
  </body>
</html>
